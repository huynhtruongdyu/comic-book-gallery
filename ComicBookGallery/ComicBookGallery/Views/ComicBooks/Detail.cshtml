@{
    Layout = null;

    var seriesTitle = "The Amazing Spider-Man";
    var issueNumber = 700;
    var description = "<p>Hello <i>aasdfas</i></p>";
    var artists = new string[]
    {
        "Script: Duy Huynh",
        "Pencils: Duy Huynh",
        "Inks: Duy huynh",
        "Color: Duy huynh",
        "Letters: Duy huynh"
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>
        <h5>Description:</h5>
        <div>@Html.Raw(description)</div>
        <h5>Artists:</h5>
        @if (artists.Length > 0)
        {
            <div>
                <ul>
                    @foreach (var item in artists)
                    {
                        <li><text> @item </text></li>
                    }
                </ul>
            </div>}
    </div>
</body>
</html>
